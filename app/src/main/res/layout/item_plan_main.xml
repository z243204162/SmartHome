<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="mainActivityPlansViewModel"
            type="com.example.zeyupeng.smarthome.UI.ViewModel.MainActivityPlansViewModel">
        </variable>
        <variable
            name="planDate"
            type="com.example.zeyupeng.smarthome.Model.MyPlans.PlanDate">
        </variable>
    </data>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        app:cardBackgroundColor="@color/cardViewBackground_Light"
        app:cardElevation="0dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:textSize="55sp"
                android:gravity="center"
                android:textColor="@color/cardViewText_1"
                android:text="@{mainActivityPlansViewModel.hour+`:`+mainActivityPlansViewModel.minute}"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                android:paddingTop="5dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:paddingStart="4dp"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="@color/cardViewText_DeviceName"
                        android:text="@{mainActivityPlansViewModel.deviceCustomName}"/>
                    <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@mipmap/delete_cross"
                        android:background="@android:color/transparent"
                        android:layout_weight="3"
                        android:onClick="@{mainActivityPlansViewModel.deletePlan}"/>

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingStart="4dp"
                    android:textColor="@color/cardViewText_1"
                    android:text="@{mainActivityPlansViewModel.deviceName}"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingStart="4dp"
                    android:textColor="@color/cardViewText_1"
                    android:text="@{`Action: `+mainActivityPlansViewModel.planAction}"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="10"
                        android:gravity="center_horizontal"
                        android:textColor="@{mainActivityPlansViewModel.repeatDate.contains(planDate.SUN)?@color/cardViewText_Light:@color/cardViewText_Dark}"
                        android:text="@{planDate.SUN}"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="10"
                        android:gravity="center_horizontal"
                        android:textColor="@{mainActivityPlansViewModel.repeatDate.contains(planDate.SUN)?@color/cardViewText_Light:@color/cardViewText_Dark}"
                        android:text="@{planDate.MON}"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="10"
                        android:gravity="center_horizontal"
                        android:textColor="@{mainActivityPlansViewModel.repeatDate.contains(planDate.TUE)?@color/cardViewText_Light:@color/cardViewText_Dark}"
                        android:text="@{planDate.TUE}"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="10"
                        android:gravity="center_horizontal"
                        android:textColor="@{mainActivityPlansViewModel.repeatDate.contains(planDate.WED)?@color/cardViewText_Light:@color/cardViewText_Dark}"
                        android:text="@{planDate.WED}"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="10"
                        android:gravity="center_horizontal"
                        android:textColor="@{mainActivityPlansViewModel.repeatDate.contains(planDate.THU)?@color/cardViewText_Light:@color/cardViewText_Dark}"
                        android:text="@{planDate.THU}"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="10"
                        android:gravity="center_horizontal"
                        android:textColor="@{mainActivityPlansViewModel.repeatDate.contains(planDate.FRI)?@color/cardViewText_Light:@color/cardViewText_Dark}"
                        android:text="@{planDate.FRI}"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="10"
                        android:gravity="center_horizontal"
                        android:textColor="@{mainActivityPlansViewModel.repeatDate.contains(planDate.SAT)?@color/cardViewText_Light:@color/cardViewText_Dark}"
                        android:text="@{planDate.SAT}"/>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>

</layout>

